{
  "name": "OpenDirector",
  "productName": "OpenDirector",
  "description": "Make better decisions with analysis on director impact, director / board remuneration and director shareholding / recent trades.",
  "keywords": [
    "opendirector",
    "open remuneration",
    "director",
    "executive",
    "remuneration",
    "australia"
  ],
  "main": "./main.js",
  "version": "1.0.1",
  "author": "BigFuture",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-dmg": "^6.0.0-beta.60",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "@electron-forge/publisher-github": "^6.0.0-beta.60",
    "electron": "13.1.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/images/logo/icon",
        "appCopyright": "Copyright Â© OpenDirector",
        "appCategoryType": "public.app-category.finance",
        "darwinDarkModeSupport": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "iconUrl": "./assets/images/logo/icon.ico",
            "setupIcon": "./assets/images/logo/icon.ico",
            "setupExe": "OpenDirector-Setup"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "name": "open-director",
              "genericName": "OpenDirector",
              "productName": "OpenDirector",
              "maintainer": "OpenDirector",
              "homepage": "https://opendirector.com.au",
              "icon": "./assets/images/logo/icon/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "name": "OpenDirector",
            "format": "ULFO",
            "overwrite": true,
            "background": "./assets/images/background/background.png",
            "icon": "./assets/images/logo/icon.icns",
            "contents": [
                { "x": 448, "y": 344, "type": "link", "path": "/Applications" },
                { "x": 192, "y": 344, "type": "file", "path": "OpenDirector.app" }
              ]
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "bigfuture",
              "name": "opendirector_desktop"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.1.1"
  }
}
